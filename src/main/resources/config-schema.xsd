<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- Enumeration contains common SQL data type names -->
  <xs:simpleType name="DataTypes">
    <xs:restriction base="xs:string">
      <xs:enumeration value="smallint"/>
      <xs:enumeration value="int"/>
      <xs:enumeration value="decimal"/>
      <xs:enumeration value="char"/>
      <xs:enumeration value="varchar"/>
      <xs:enumeration value="timestamp"/>
      <xs:enumeration value="date"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="Attribute">
    <xs:restriction base="xs:string">
      <xs:minLength value="1"/>
      <xs:whiteSpace value="collapse"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Contains column type information with all possible attributes -->
  <xs:complexType name="DataTypeDto">
    <xs:attribute name="name" type="DataTypes" use="required"/>
    <xs:attribute name="nullable" type="xs:boolean" default="true"/>
    <xs:attribute name="handler" type="Attribute"/>
    <xs:attribute name="precision" type="xs:int"/>
    <xs:attribute name="scale" type="xs:int"/>
    <xs:attribute name="length" type="xs:int" default="1"/>
    <xs:attribute name="unsigned" type="xs:boolean" default="false"/>
    <xs:attribute name="min" type="xs:double"/>
    <xs:attribute name="max" type="xs:double"/>
  </xs:complexType>

  <!-- Describes column in the SQL table -->
  <xs:complexType name="ColumnDto">
    <xs:all>
      <xs:element name="type" type="DataTypeDto"/>
    </xs:all>
    <xs:attribute name="name" type="Attribute" use="required"/>
  </xs:complexType>

  <!-- Describes SQL table -->
  <xs:complexType name="TableDto">
    <xs:sequence>
      <xs:element name="column" type="ColumnDto" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="name" type="Attribute" use="required"/>
    <xs:attribute name="idColumnName" type="Attribute" default="id"/>
    <xs:attribute name="rows" type="xs:int" use="required"/>
  </xs:complexType>

  <!-- Set of supported RDBMS -->
  <xs:simpleType name="SupportedDBMS">
    <xs:restriction base="xs:string">
      <xs:enumeration value="mysql"/>
      <xs:enumeration value="postgres"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Describes SQL database -->
  <xs:complexType name="DatabaseDto">
    <xs:sequence>
      <xs:element name="table" type="TableDto" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="name" type="Attribute" use="required"/>
    <xs:attribute name="dbms" type="SupportedDBMS" use="required"/>
  </xs:complexType>

  <xs:element name="database" type="DatabaseDto"/>
</xs:schema>